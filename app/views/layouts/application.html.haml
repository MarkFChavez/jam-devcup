!!!
%html
  %head
    %title JamDevcup
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body

    - if user_signed_in?
      %div
        %span.lead= "Hi #{current_user.name}"
        &nbsp;
        %span.lead= link_to "Logout", destroy_user_session_path, method: :delete

    = render 'layouts/flash'

    = yield
